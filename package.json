{
  "name": "alonecandies-portfolio",
  "version": "1.0.0",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --no-cache --fix",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "prettier:check": "prettier --check src",
    "prettier:write": "prettier --write src",
    "eslint:fix": "eslint --rule 'no-console:error' --fix --ext .ts,.tsx,.js,.jsx src",
    "enable-husky": "husky install && chmod ug+x .husky/*",
    "postbuild": "next-sitemap --config next-sitemap.config.js"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.9",
    "@chakra-ui/react": "^2.3.1",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@svgr/webpack": "^6.3.1",
    "framer-motion": "^7.2.1",
    "next": "12.2.5",
    "next-seo": "^5.5.0",
    "next-sitemap": "^3.1.21",
    "react": "18.2.0",
    "react-countup": "^6.3.1",
    "react-dom": "18.2.0",
    "react-lottie-player": "^1.4.3"
  },
  "devDependencies": {
    "@types/node": "18.7.13",
    "@types/react": "18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-next": "12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "4.8.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn prettier:write",
      "yarn eslint:fix",
      "yarn test --onlyChanged=true --watchAll=false --passWithNoTests"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --rule '@typescript-eslint/no-unused-vars:error' --fix"
    ]
  },
  "engines": {
    "npm": "please-use-yarn",
    "node": "16",
    "yarn": ">=1.22"
  },
  "jest": {
    "transformIgnorePatterns": [
      "//node_modules"
    ]
  }
}
